<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background="@color/colorSilverLite"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl"
    tools:context=".ui.city_climate.CityClimateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/climate_toolbar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorToolBar"
            android:layoutDirection="rtl"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/climate_menu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="15dp"
                        android:padding="0dp"
                        app:srcCompat="@drawable/ic_menu" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/almarai_light"
                    android:gravity="center"
                    android:text="مناخ المدينة"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="12dp"
                        android:padding="0dp"
                        app:srcCompat="@drawable/ic_back" />
                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvClimateTopics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/climate_toolbar"
            android:scrollbars="none" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/climate_navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/custom_header"
        app:itemHorizontalPadding="19dp"
        app:itemIconPadding="21dp"
        app:itemIconSize="20dp"
        app:itemIconTint="#000"
        app:itemTextAppearance="@style/TextViewStyle"
        app:menu="@menu/menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>